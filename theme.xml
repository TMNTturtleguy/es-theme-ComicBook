<theme>
    <formatVersion>3</formatVersion>
    <include>./comic_book.xml</include>

	<view name="system">

		<image name="SystemBackground" extra="true">
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./_assets/defaultcomic.png</path>
		</image>

		<image name="Border" extra="true">
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./_assets/border.png</path>
		</image>

		<image name="logo">
			<path>./custom-collections/system.png</path>
    </image>

		<text name="logoText">
			<fontPath>./_assets/fonts/Active_Font.ttf</fontPath>
			<color>000000</color>
			<forceUppercase>false</forceUppercase>
		</text>

	</view>

	<view name="basic, detailed, video">

		<text name="logoText">
			<pos>0.025 0.01</pos>
			<size>0.460 0.126</size>
			<fontSize>0.11</fontSize>
			<fontPath>./_assets/fonts/Active_Font.ttf</fontPath>
			<color>000000</color>
			<forceUppercase>false</forceUppercase>
		</text>

		<image name="logo">
			<path>./custom-collections/system.png</path>
			<pos>0.266 0.086</pos>
			<maxSize>0.460 0.126</maxSize>
			<origin>0.5 0.5</origin>
		</image>

		<image name="classic_logo" extra="true">
			<path>./custom-collections/bannerlogo.png</path>
			<pos>0.75 0.086</pos>
			<maxSize>0.40 0.1</maxSize>
			<origin>0.5 0.5</origin>
		</image>

		<image name="comic_rip" extra="true">
			<path>./custom-collections/comic_rip.png</path>
			<pos>0.918 0.25</pos>
			<maxSize>0.32 0.32</maxSize>
			<origin>0.5 0.5</origin>
		</image>

	</view>

	<view name="basic">
	</view>

	<view name="detailed">

	</view>

</theme>
